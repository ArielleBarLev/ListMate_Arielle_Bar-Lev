<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ListMate_Arielle_BarLev" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/screen_background_light_purple</item>

        <item name="materialButtonStyle">@style/App.Button.Primary</item>
        <item name="materialButtonOutlinedStyle">@style/App.Button.Outlined</item>
    </style>

    <style name="Theme.ListMate_Arielle_BarLev.NoActionBar" parent="Theme.ListMate_Arielle_BarLev">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.TextStyle.Heading" parent="">
        <item name="android:textColor">@color/dark_purple_headings</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="App.TextStyle.Body" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_body_color</item>
    </style>

    <style name="App.Button.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/button_primary_background_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="rippleColor">@color/app_button_ripple_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/app_button_outlined_stroke</item>
        <item name="android:textColor">@color/app_button_outlined_stroke</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/app_button_ripple_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="App.Widget.EditText.HTMLInspired" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/html_textbox_state_selector</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/html_textbox_text_color</item>
        <item name="android:textColorHint">@color/html_textbox_placeholder_color</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_drawable</item>
    </style>

</resources>